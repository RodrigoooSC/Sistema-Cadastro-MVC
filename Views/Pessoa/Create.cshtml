@model Cadastro_MVC.Models.PessoaModel;

@{
    ViewData["Title"] = "Cadastrar pessoa";
}

<h3>@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="PessoaNome" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="PessoaNome" type="text" class="form-control" placeholder="Nome">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PessoaEmail" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="PessoaEmail" type="email" class="form-control" placeholder="Email">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PessoaTelefone" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="PessoaTelefone" type="text" class="form-control" placeholder="Telefone">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

