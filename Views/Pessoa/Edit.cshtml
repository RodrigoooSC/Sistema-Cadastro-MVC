@model Cadastro_MVC.Models.PessoaModel

@{
    ViewData["Title"] = "Editar pessoa";
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-6">
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="PessoaID" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="PessoaID" type="number" class="form-control" readonly>                    
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PessoaNome" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="PessoaNome" type="text" class="form-control" placeholder="Digite seu nome">
                    <span asp-validation-for="PessoaNome" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PessoaEmail" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="PessoaEmail" type="email" class="form-control" placeholder="Digite seu e-mail">
                    <span asp-validation-for="PessoaEmail" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PessoaTelefone" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="PessoaTelefone" type="text" class="form-control" placeholder="Digite seu telefone">
                    <span asp-validation-for="PessoaTelefone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Editar</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Voltar</a>
</div>